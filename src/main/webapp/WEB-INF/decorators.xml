<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
     <decorator name="index" page="index.jsp">
        <pattern>/index*</pattern>
    </decorator>
    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="login" page="login.jsp">
        <pattern>/dang-nhap*</pattern>
    </decorator>
     <decorator name="cart" page="cart.jsp">
        <pattern>/cart*</pattern>
    </decorator>
     <decorator name="blog-single" page="blog-single.jsp">
        <pattern>/blog-single*</pattern>
    </decorator>
      <decorator name="blog" page="blog.jsp">
        <pattern>/blog-single*</pattern>
    </decorator>
      <decorator name="404" page="404.jsp">
        <pattern>/404*</pattern>
    </decorator>
     <decorator name="checkout" page="checkout.jsp">
        <pattern>/checkout*</pattern>
    </decorator>
      <decorator name="contact-us" page="contact-us.jsp">
        <pattern>/checkout*</pattern>
    </decorator>
     <decorator name="product-details" page="product-details.jsp">
        <pattern>/product-details*</pattern>
    </decorator>
     <decorator name="Ex1" page="Ex1.jsp">
        <pattern>/Ex1*</pattern>
    </decorator>
</decorators>